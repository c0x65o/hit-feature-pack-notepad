{
  "name": "@hit/feature-pack-notepad",
  "version": "1.0.56",
  "description": "Notepad feature pack with CRUD, list view, sharing, and per-user/global scope. Uses @hit/ui-kit for shell-agnostic UI.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/notepad.d.ts",
      "import": "./dist/schema/notepad.js",
      "require": "./dist/schema/notepad.js",
      "default": "./dist/schema/notepad.js"
    },
    "./server/api/*": {
      "types": "./dist/server/api/*.d.ts",
      "import": "./dist/server/api/*.js",
      "require": "./dist/server/api/*.js",
      "default": "./dist/server/api/*.js"
    }
  },
  "files": [
    "dist",
    "feature-pack.yaml"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "peerDependencies": {
    "@hit/acl-utils": "*",
    "@hit/feature-pack-auth-core": "*",
    "@hit/sdk": "*",
    "@hit/ui-kit": "*",
    "drizzle-orm": "^0.38.0",
    "lucide-react": "^0.460.0",
    "next": "^15.5.9",
    "react": "^19.2.3",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@hit/acl-utils": "file:../hit-acl-utils",
    "@hit/feature-pack-auth-core": "file:../hit-feature-pack-auth-core",
    "@hit/sdk": "file:../../hit-sdks/hit-sdk-typescript",
    "@hit/ui-kit": "file:../hit-ui-kit",
    "@types/node": "^20",
    "@types/react": "^19.0.0",
    "drizzle-orm": "^0.38.0",
    "lucide-react": "^0.460.0",
    "next": "^15.5.9",
    "typescript": "^5",
    "zod": "^4.3.2"
  },
  "keywords": [
    "hit",
    "feature-pack",
    "notepad",
    "notes",
    "crud",
    "ui-kit"
  ],
  "license": "MIT"
}
