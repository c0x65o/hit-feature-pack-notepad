{
  "name": "@hit/feature-pack-notepad",
  "version": "3.0.37",
  "description": "Notepad feature pack with CRUD, list view, sharing, and per-user/global scope. Uses @hit/ui-kit for shell-agnostic UI.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/notepad.d.ts",
      "import": "./dist/schema/notepad.js",
      "require": "./dist/schema/notepad.js",
      "default": "./dist/schema/notepad.js"
    }
  },
  "files": [
    "dist",
    "feature-pack.yaml"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "peerDependencies": {
    "@hit/ui-kit": "*",
    "react": "^18.0.0 || ^19.0.0",
    "next": "^14.0.0 || ^15.0.0",
    "@hit/sdk": "*",
    "lucide-react": ">=0.263.0",
    "drizzle-orm": ">=0.30.0"
  },
  "devDependencies": {
    "@hit/ui-kit": "file:../hit-ui-kit",
    "@types/react": "^18.2.0",
    "drizzle-orm": "^0.30.0",
    "lucide-react": "^0.460.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "hit",
    "feature-pack",
    "notepad",
    "notes",
    "crud",
    "ui-kit"
  ],
  "license": "MIT"
}
